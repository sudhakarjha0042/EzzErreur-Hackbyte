{
  "short_name": "EzzErreur",
  "version": "1.0",
  "manifest_version": 3, 
  "name": "Your Code Booking Marking Tool",
  "permissions": [
    "contextMenus",
    "activeTab",
    "https://api.github.com/*",
    "https://ezzerreur-hackbyte.onrender.com/*"
  ],

  "action":{
    "default_popup": "index.html",
    "default_title": "Save Your Code", 
    "default_icon":{
      "16": "EzzErreurLogoM.png",
      "32": "EzzErreurLogoM.png",
      "128":"EzzErreurLogoM.png"
    }
},
"background": {
  "service_worker": "backgroundScript.js"
},
"content_scripts": [
  {
    "matches": ["https://github.com/*pull*"],
    "js":  ["contentScripts/content.js"]
  }
]
}
